{
  "name": "sveltestylelink",
  "displayName": "SvelteStyleLink",
  "description": "Jump from any CSS or SCSS class used inside your Svelte components directly to its style definition.",
  "version": "0.0.2",
  "publisher": "tumininu",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tumininucodes/sveltestylelink"
  },
  "activationEvents": [
    "onLanguage:svelte"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "svelte",
        "extensions": [
          ".svelte"
        ]
      }
    ],
    "commands": [],
    "configuration": {},
    "keybindings": []
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
